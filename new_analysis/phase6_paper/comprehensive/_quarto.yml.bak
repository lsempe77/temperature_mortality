# Quarto Project Configuration
# ============================
# This file centralizes project-wide settings for the Temperature-Mortality paper.
# Run `quarto render` from this directory to build all outputs.

project:
  type: book
  output-dir: _output
  render:
    - _master_document.qmd

# Book structure (for book type)
book:
  title: "Temperature-Related Mortality Among Elderly Brazilians (2010-2024)"
  author: "Lucas Semp√©"
  date: today
  chapters:
    - index.qmd
    - 01_front_matter.qmd
    - 02_phase0_data.qmd
    - 03_phase1_methods_results.qmd
    - 04_phase2_sensitivity.qmd
    - 05_phase3_confounding.qmd
    - 06_phase4_heterogeneity.qmd
    - 07_phase5_figures_tables.qmd
    - 08_discussion_conclusions.qmd
    - 09_supplementary_appendix.qmd

# Bibliography
bibliography: references.bib
csl: lancet-planetary-health.csl

# Execution settings (apply to all documents)
execute:
  echo: false
  warning: false
  error: true
  cache: true
  cache-path: _cache

# HTML format settings
format:
  html:
    toc: true
    toc-depth: 4
    toc-location: left
    number-sections: true
    theme: cosmo
    fontsize: 11pt
    linestretch: 1.5
    code-fold: true
    code-tools: true
  pdf:
    toc: true
    toc-depth: 4
    number-sections: true
    documentclass: report
    geometry: margin=1in
    keep-tex: true

# Parameters (passed to all documents)
params:
  # Use relative paths from this directory
  data_dir: "../../phase0_data_prep/results"
  phase1_dir: "../../phase1_core_model/results"
  phase2_dir: "../../phase2_robustness/results"
  phase3_dir: "../../phase3_confounding/results"
  phase4_dir: "../../phase4_heterogeneity/results"
  figures_dir: "../../phase5_outputs/v2/figures"
  tables_dir: "../../tables"
  # Control flags
  run_heavy_etl: false
  include_sensitivity: true
  
# Language
lang: en

# Metadata
metadata:
  version: "2.0"
  last_updated: "2025-01-09"
